{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "declaration": false,
  },
  "experimentalDecorators": true,
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
